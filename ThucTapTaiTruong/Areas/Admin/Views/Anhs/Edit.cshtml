@model ThucTapTaiTruong.Models.Entities.Anh

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}
@using (Html.BeginForm("Edit", "Anhs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

        <!-- Main content -->
        <section class="content my-2">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger text-uppercase">Ten</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            <button class="btn btn-sm btn-success" type="submit" name="edit"><i class="fas fa-save"></i></button>
                            <a href="@Url.Action("Index", "Anhs")" class="btn btn-sm btn-info"><i class="fas fa-long-arrow-alt-left" s></i></a>
                        </div>
                    </div>
                </div>
                <div class="card-body">


                    <div class="form-horizontal">
                        <h4>Anh</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.MaAnh)

                        <div class="form-group">
                            <label>Mã sản phẩm<span class="text-danger">(*)</span></label>
                            <div class="col-md-10">
                                @Html.DropDownList("MaSanPham", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MaSanPham, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            label>Tên ảnh/label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TenAnh, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TenAnh, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Ảnh sản phẩm<span class="text-danger">(*)</span></label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.URL, new { htmlAttributes = new { @class = "form-control", @type = "file" } })
                                @Html.ValidationMessageFor(model => model.URL, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        
                    </div>
                    
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
}
