@model ThucTapTaiTruong.Models.Entities.TheLoai

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
} 
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
